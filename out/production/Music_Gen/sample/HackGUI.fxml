            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="startStop" mnemonicParsing="false" onAction="#updatePlayMusic" text="Jams" />
